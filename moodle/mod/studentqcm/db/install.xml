<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/studentqcm/db" VERSION="20220122" COMMENT="XMLDB file for StudentQCM module"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>

    <TABLE NAME="studentqcm" COMMENT="Main table for StudentQCM module">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="text" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="false" DEFAULT="0"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="start_date_1" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="end_date_1" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="end_date_tt_1" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="start_date_2" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="end_date_2" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="end_date_tt_2" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="start_date_3" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="end_date_3" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="end_date_tt_3" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="referentiel" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="foreign_referentiel" TYPE="foreign" FIELDS="referentiel" REFTABLE="referentiel" REFFIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="referentiel" COMMENT="List of referentiel">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="varchar" LENGTH="255" NOTNULL="true" COMMENT="Nom du référentiel"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

     <TABLE NAME="competency" COMMENT="List of competencies">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="varchar" LENGTH="255" NOTNULL="true" COMMENT="Nom du référentiel"/>
        <FIELD NAME="referentiel" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Référentiel (clé étrangère)"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="foreign_referentiel" TYPE="foreign" FIELDS="referentiel" REFTABLE="referentiel" REFFIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="subcompetency" COMMENT="List of competencies">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="varchar" LENGTH="255" NOTNULL="true" COMMENT="Nom du référentiel"/>
        <FIELD NAME="competency" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Référentiel (clé étrangère)"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="foreign_referentiel" TYPE="foreign" FIELDS="competency" REFTABLE="competency" REFFIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="studentqcm_question" COMMENT="Each record is one QCM and its config data">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="bigint" LENGTH="10" NOTNULL="true" COMMENT="ID de l'étudiant créateur"/>
        <FIELD NAME="indexation" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Champ d'indexation"/>
        <FIELD NAME="question" TYPE="text" NOTNULL="true" COMMENT="Contenu XML ou chemin du fichier"/>
        <FIELD NAME="global_comment" TYPE="text" NOTNULL="true" COMMENT="Commentaire global de la question"/>
        <FIELD NAME="context" TYPE="text" NOTNULL="true" COMMENT="Context"/>
        <FIELD NAME="referentiel" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Référentiel (clé étrangère)"/>
        <FIELD NAME="competency" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Compétence (clé étrangère)"/>
        <FIELD NAME="subcompetency" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Sous-Compétence (clé étrangère)"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="foreign_user" TYPE="foreign" FIELDS="userid" REFTABLE="users" REFFIELDS="id"/>
        <KEY NAME="foreign_referentiel" TYPE="foreign" FIELDS="referentiel" REFTABLE="referentiel" REFFIELDS="id"/>
        <KEY NAME="foreign_competency" TYPE="foreign" FIELDS="competency" REFTABLE="competency" REFFIELDS="id"/>
        <KEY NAME="foreign_subcompetency" TYPE="foreign" FIELDS="subcompetency" REFTABLE="subcompetency" REFFIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="keyword" COMMENT="List of keywords">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="word" TYPE="varchar" LENGTH="255" NOTNULL="true" COMMENT="Mot-clé"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="question_keywords" COMMENT="Relation entre questions et mots-clés">
      <FIELDS>
        <FIELD NAME="question_id" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="keyword_id" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="question_id, keyword_id"/>
        <KEY NAME="foreign_question" TYPE="foreign" FIELDS="question_id" REFTABLE="studentqcm_question" REFFIELDS="id"/>
        <KEY NAME="foreign_keyword" TYPE="foreign" FIELDS="keyword_id" REFTABLE="keyword" REFFIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="subcompetency_keywords" COMMENT="Relation entre mots-clés et sous-compétences">
      <FIELDS>
        <FIELD NAME="keyword_id" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="subcompetency_id" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="keyword_id, subcompetency_id"/>
        <KEY NAME="foreign_keyword" TYPE="foreign" FIELDS="keyword_id" REFTABLE="keyword" REFFIELDS="id"/>
        <KEY NAME="foreign_subcompetency" TYPE="foreign" FIELDS="subcompetency_id" REFTABLE="subcompetency" REFFIELDS="id"/>
      </KEYS>
    </TABLE>


  </TABLES>
</XMLDB>
