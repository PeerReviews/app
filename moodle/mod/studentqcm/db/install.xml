<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/studentqcm/db" VERSION="20220122" COMMENT="XMLDB file for StudentQCM module"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>

    <TABLE NAME="studentqcm">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="text" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="true"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="false" DEFAULT="0"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </FIELDS>
    </TABLE>

    <TABLE NAME="studentqcm_form" COMMENT="Each record is one QCM and its config data">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID de l'étudiant créateur"/>
        <FIELD NAME="qcm_content" TYPE="text" NOTNULL="true" COMMENT="Chemin ou contenu du fichier XML"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Horodatage de la création"/>
        <FIELD NAME="status" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="active" COMMENT="Statut du QCM (e.g., active, reviewed)"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="studentqcm_evaluations" COMMENT="Liens entre QCM et évaluateurs">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="qcmid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID du QCM évalué"/>
        <FIELD NAME="evaluatorid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID de l'étudiant évaluateur"/>
        <FIELD NAME="feedback" TYPE="text" NOTNULL="false" COMMENT="Feedback de l'évaluateur"/>
        <FIELD NAME="timeevaluated" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="Horodatage de l'évaluation"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="foreign_qcmid" TYPE="foreign" FIELDS="qcmid" REFTABLE="studentqcm" REFFIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="studentqcm_phases" COMMENT="Gestion des phases">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="phase_name" TYPE="char" LENGTH="50" NOTNULL="true" COMMENT="Nom de la phase"/>
        <FIELD NAME="start_date" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Début de la phase"/>
        <FIELD NAME="end_date" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Fin de la phase"/>
        <FIELD NAME="status" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="active" COMMENT="Statut de la phase"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
